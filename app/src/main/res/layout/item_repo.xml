<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/placeholder_dots"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/image_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/image_thumbnail"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/text_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/placeholder_dots"
        app:layout_constraintLeft_toRightOf="@+id/image_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/text_watchers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:text="@string/placeholder_dots"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/image_watchers"
        app:layout_constraintTop_toTopOf="@+id/image_watchers"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/text_forks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:text="@string/placeholder_dots"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/image_forks"
        app:layout_constraintTop_toTopOf="@+id/image_watchers"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/text_issues"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:text="@string/placeholder_dots"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/image_issues"
        app:layout_constraintTop_toTopOf="@+id/image_watchers"
        android:layout_marginStart="4dp" />

    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_watchers"
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_thumbnail"
        app:layout_constraintLeft_toRightOf="@+id/image_thumbnail"
        app:srcCompat="@drawable/ic_star_grey600_24dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/image_forks"
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_thumbnail"
        app:layout_constraintLeft_toRightOf="@+id/text_watchers"
        app:srcCompat="@drawable/ic_source_fork_grey600_24dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/image_issues"
        android:layout_width="16dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_thumbnail"
        app:layout_constraintLeft_toRightOf="@+id/text_forks"
        app:srcCompat="@drawable/ic_android_debug_bridge_grey600_24dp"
        android:layout_marginStart="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>