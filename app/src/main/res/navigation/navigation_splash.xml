<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_splash"
    app:startDestination="@id/blankFragment">
    <activity
        android:id="@+id/mainActivity"
        android:name="com.githubapp.mvvm.ui.main.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main"/>
    <activity
        android:id="@+id/loginActivity"
        android:name="com.githubapp.mvvm.ui.login.LoginActivity"
        android:label="LoginActivity"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.githubapp.mvvm.ui.splash.blank.BlankFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_blank">
        <action
            android:id="@+id/action_splashFragment_to_mainActivity"
            app:destination="@id/mainActivity"/>
        <action
            android:id="@+id/action_splashFragment_to_loginActivity"
            app:destination="@id/loginActivity"/>
    </fragment>
</navigation>